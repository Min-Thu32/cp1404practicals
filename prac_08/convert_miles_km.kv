BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles_input
            text: '34'
            font_size: 48
            on_text: app.calculate_conversion()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        orientation: 'vertical'
        text: 'Convert miles to km'
    Label:
        id: output_label
        font_size: 48
        text: '54.71756'
        color: (1, 1, 0, 1)